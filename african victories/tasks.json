{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev-server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*error.*$",
          "severity": 8
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*ready - started server on.*",
          "endsPattern": "^.*$"
        }
      }
    }
  ]
}
